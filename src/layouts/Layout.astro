<style is:global>
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  * {
    padding: 0;
    margin: 0;
  }

  html,
  body {
    height: 100%;
  }

  body {
    display: flex;
    flex-direction: column;
    gap: 20px;
    padding: 20px 20px 40px;
    font-family:
      Palatino,
      Charter,
      Helvetica,
      Seravek,
      Helvetica Neue,
      sans-serif;
    line-height: 1.5;
    -webkit-font-smoothing: antialiased;
    color: #561a38;
    background-color: lightsteelblue;
  }

  img,
  picture,
  video,
  canvas,
  svg {
    display: block;
    max-width: 100%;
  }

  input,
  button,
  textarea,
  select {
    font: inherit;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: Athelas, Avenir, Helvetica, Arial, sans-serif;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    overflow-wrap: break-word;
  }

  #root,
  #__next {
    isolation: isolate;
  }

  a {
    color: #4d4608;
  }
</style>
